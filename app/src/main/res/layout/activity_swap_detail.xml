<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".feature.swap.SwapDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:paddingStart="17dp"
        android:paddingEnd="17dp"
        android:paddingBottom="17dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card_top"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp" />

            <TextView
                android:id="@+id/status"
                style="@style/text_16_333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/time"
                style="@style/text_12_9E9E9E"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp" />

        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginStart="20dp"
            android:layout_marginTop="-2px"
            android:layout_marginEnd="20dp"
            android:layerType="software" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card_bottom"
            android:padding="30dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp">

                <TableRow>

                    <TextView
                        style="@style/text_13_9E9E9E"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/swap_detail_id" />

                    <TextView
                        android:id="@+id/id"
                        style="@style/text_13_333333"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:layout_weight="1" />

                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <TextView
                        style="@style/text_13_9E9E9E"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/swap_detail_from_amount_colon" />

                    <TextView
                        android:id="@+id/fromAmount"
                        style="@style/text_13_333333"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:layout_weight="1" />

                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <TextView
                        style="@style/text_13_9E9E9E"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/swap_detail_to_amount_colon" />

                    <TextView
                        android:id="@+id/toAmount"
                        style="@style/text_13_333333"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:layout_weight="1" />

                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/addressTitle"
                        style="@style/text_13_9E9E9E"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/swap_detail_fee_colon" />

                    <TextView
                        android:id="@+id/fee"
                        style="@style/text_13_333333"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:layout_weight="1" />

                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <TextView
                        style="@style/text_13_9E9E9E"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/swap_detail_to_address_tag_colon" />

                    <TextView
                        android:id="@+id/addressTag"
                        style="@style/text_13_333333"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:layout_weight="1" />

                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <TextView
                        style="@style/text_13_9E9E9E"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/swap_detail_to_address_colon" />

                    <TextView
                        android:id="@+id/toAddress"
                        style="@style/text_13_333333"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:layout_weight="1" />

                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <TextView
                        style="@style/text_13_9E9E9E"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="extraID:" />

                    <TextView
                        android:id="@+id/extraID"
                        style="@style/text_13_333333"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:layout_weight="1" />

                </TableRow>

            </TableLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
