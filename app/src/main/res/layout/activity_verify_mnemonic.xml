<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_26B479"
            android:paddingStart="25dp"
            android:paddingTop="15dp"
            android:paddingEnd="25dp"
            android:paddingBottom="15dp">

            <ImageView
                android:id="@+id/dot"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginTop="6dp" />

            <TextView
                android:id="@+id/prompt"
                style="@style/text_12_FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_toEndOf="@id/dot"
                android:lineSpacingMultiplier="1.2"
                android:text="@string/verify_mnemonic_prompt" />

        </RelativeLayout>

        <TextView
            style="@style/text_16_333333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/verify_mnemonic_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:weightSum="3">

            <TextView
                android:id="@+id/tag1"
                style="@style/text_12_26B479"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tag2"
                style="@style/text_12_26B479"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tag3"
                style="@style/text_12_26B479"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:weightSum="3">

            <TextView
                android:id="@+id/mnemonic1"
                style="@style/text_12_333333"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:gravity="center" />

            <TextView
                android:id="@+id/mnemonic2"
                style="@style/text_12_333333"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:gravity="center" />

            <TextView
                android:id="@+id/mnemonic3"
                style="@style/text_12_333333"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:gravity="center" />
        </LinearLayout>

        <TextView
            style="@style/text_12_9E9E9E"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="@string/verify_mnemonic_hint" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <TextView
            android:id="@+id/next"
            style="@style/button_text_16"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="45dp"
            android:enabled="true"
            android:text="@string/verify" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>